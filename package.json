{
  "name": "urls-cut",
  "version": "0.8.0",
  "description": "URL Shortener API - Monorepo",
  "private": true,
  "workspaces": [
    "services/*",
    "packages/*"
  ],
  "scripts": {
    "lint": "eslint \"{services,packages,test}/**/*.ts\" --ignore-pattern \"**/dist/**\" --ignore-pattern \"**/*.d.ts\" --fix",
    "lint:check": "eslint \"{services,packages,test}/**/*.ts\" --ignore-pattern \"**/dist/**\" --ignore-pattern \"**/*.d.ts\"",
    "format": "prettier --write \"{services,packages,test}/**/*.{ts,json,md}\" --ignore-path .prettierignore",
    "format:check": "prettier --check \"{services,packages,test}/**/*.{ts,json,md}\" --ignore-path .prettierignore",
    "test": "jest",
    "test:unit": "jest --testPathIgnorePatterns=e2e",
    "test:unit:watch": "jest --testPathIgnorePatterns=e2e --watch",
    "test:e2e": "jest --config test/jest-e2e.json",
    "test:e2e:watch": "jest --config test/jest-e2e.json --watch",
    "test:all": "npm run test:unit && npm run test:e2e",
    "test:cov": "jest --coverage --coverageDirectory=./coverage",
    "test:ci": "npm run lint:check && npm run format:check && npm run test:unit && npm run test:e2e && npm run test:cov",
    "build": "npm run build --workspace=packages/shared && npm run build --workspace=services/auth-service && npm run build --workspace=services/url-service",
    "build:shared": "npm run build --workspace=packages/shared",
    "build:auth": "npm run build --workspace=services/auth-service",
    "build:url": "npm run build --workspace=services/url-service",
    "migration:run": "ts-node scripts/run-migration.ts",
    "migration:generate": "typeorm-ts-node-commonjs migration:generate",
    "migration:create": "typeorm-ts-node-commonjs migration:create"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.9",
    "@nestjs/common": "^11.1.9",
    "@nestjs/core": "^11.1.9",
    "@nestjs/testing": "^11.1.9",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "inquirer": "^9.3.8",
    "jest": "^29.7.0",
    "lodash": "^4.17.21",
    "prettier": "^3.2.4",
    "rxjs": "^7.8.2",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typeorm": "^0.3.17"
  },
  "engines": {
    "node": ">=20.11.0",
    "npm": ">=10.0.0"
  }
}
